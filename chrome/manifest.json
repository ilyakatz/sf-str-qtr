{
  "manifest_version": 3,
  "name": "SF Quaterly",
  "version": "1.0",
  "description": "A Chrome extension using React and TypeScript",
  "permissions": [
    "activeTab",
    "https://*",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "js": ["contentscript.js"],
       "enabled": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "build/images/icon16.png",
      "48": "build/images/icon48.png",
      "128": "build/images/icon128.png"
    }
  },
  "icons": {
    "16": "build/images/icon16.png",
    "48": "build/images/icon48.png",
    "128": "build/images/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "height": 400
  }
}